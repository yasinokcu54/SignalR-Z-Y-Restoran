        <script type="text/javascript">

            $(document).ready(() => {
                var connection = new signalR.HubConnectionBuilder().withUrl("https://localhost:7107/SignalRHub").build();

                $("#connstatus").text(connection.state);

                connection.start().then(() => {
                    $("#connstatus").text(connection.state);
                    setInterval(() => {
                        connection.invoke("SendStatistic");
                    }, 1000);
                }).catch((err) => { console.log(err) });

                connection.on("ReceiveCategoryCount", (values) => {
                    $("#categorycount").text(values)
                });
                connection.on("ReceiveProductCount", (values) => {
                    $("#productcount").text(values)
                });
                connection.on("ReceiveActiveCategoryCount", (values) => {
                    $("#activecategorycount").text(values)
                });
                connection.on("ReceivePassiveCategoryCount", (values) => {
                    $("#passivecategorycount").text(values)
                });
                connection.on("ReceiveProductCountByCategoryNameHamburger", (values) => {
                    $("#productcountbycategorynamehamburger").text(values)
                });
                connection.on("ReceiveProductCountByCategoryNameDrink", (values) => {
                    $("#productcountbycategorynamedrink").text(values)
                });
                connection.on("ReceiveProductPriceAvg", (values) => {
                    $("#productpriceavg").text(values)
                });
                connection.on("ReceiveProductNameByMaxPrice", (values) => {
                    $("#productnamebymaxprice").text(values)
                });
                connection.on("ReceiveProductNameByMinPrice", (values) => {
                    $("#productnamebyminprice").text(values)
                });
                connection.on("ReceiveProductAvgPriceByHamburger", (values) => {
                    $("#productavgpricebyhamburger").text(values)
                });
                connection.on("ReceiveTotalOrderCount", (values) => {
                    $("#totalordercount").text(values)
                });
                connection.on("ReceiveActiveOrderCount", (values) => {
                    $("#activeordercount").text(values)
                });
                connection.on("ReceiveLastOrderPrice", (values) => {
                    $("#lastorderprice").text(values)
                });
                connection.on("ReceiveTotalMoneyCaseAmount", (values) => {
                    $("#totalmoneymaseamount").text(values)
                });
                // connection.on("ReceiveTotalMoneyCaseAmount", (values) => {
                //     $("#totalmoneymaseamount").text(values)
                // });
                connection.on("ReceiveMenuTableCount", (values) => {
                    $("#menutablecount").text(values)
                });
            });

        </script>

