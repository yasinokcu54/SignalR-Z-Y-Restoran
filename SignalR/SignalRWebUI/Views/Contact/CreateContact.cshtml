@model CreateContactDto
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Ana Sayfa İletişim Bilgi İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni İletişim Yazı Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Location">Lokasyonu Giriniz</label>
                                <input type="text" class="form-control" asp-for="Location" id="Location">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Phone">Telefon Numarası Giriniz</label>
                                <input type="text" class="form-control" asp-for="Phone" id="Phone">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="email">Mail Adresini Giriniz</label>
                                <input type="text" class="form-control" asp-for="Mail" id="email">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="footertitle">Alt Başlığı Giriniz</label>
                                <input type="text" class="form-control" asp-for="FooterTitle" id="footertitle">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="footertitle">Açık Olduğumuz Günler</label>
                                <input type="text" class="form-control" asp-for="OpenDays" id="opendays">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="opendaysdesc">Açık Günler Açıklama</label>
                                <input type="text" class="form-control" asp-for="OpenDaysDescription" id="opendaysdesc">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="openhours">Açık Olduğumuz Saatler</label>
                                <input type="text" class="form-control" asp-for="OpenHours" id="openhours">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="FooterDescription">Alt Açıklama Alanı</label>
                                <textarea rows="5" class="form-control" asp-for="FooterDescription" id="FooterDescription"></textarea>
                            </div>
                        </div>
                        <div class="card-action">
                            <button class="btn btn-primary">İletişim Bilgisini Ekle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

